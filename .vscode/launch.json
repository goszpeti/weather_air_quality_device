{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/waqd/__main__.py",
            "args": ["-D=3"],
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true
        },
        {
            "name": "Python Raspberry Pi: Attach",
            "type": "python",
            "request": "attach",
            "subProcess": true,
            //"preLaunchTask": "startapp",
            //"postDebugTask": "stopapp",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/waqd", // ssh://myraspberry2You may also manually specify the directory containing your source code.
                    "remoteRoot": "/home/pi/.local/pipx/venvs/waqd-1-6-0b4/lib64/python3.9/site-packages/waqd/" // Linux example; adjust as necessary for your OS and situation.
                }
            ],
            "port": 3003,
            "host": "mypi",
            "justMyCode": false
        },
        {
            "name": "Python: Testing",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal", // needed, so that venv activates
            "subProcess": true,
            "justMyCode": false,
            "python": "${command:python.interpreterPath}",
            "env": {
            },
        },
    ]
}